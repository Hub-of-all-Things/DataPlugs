<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <target>System.out</target>
    <encoder>
      <pattern>[%-5level] [%date{MM/dd/YYYY HH:mm:ss}] %logger{1} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="ASYNCSTDOUT" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="STDOUT" />
  </appender>

  <logger name="ch.qos.logback" level="WARN" />
  <logger name="play" level="INFO" />
  <logger name="http" level="INFO" />
  <logger name="application" level="INFO" />

  <!-- PLUG-SPECIFIC LOGGERS -->
  <logger name="org.hatdex.dataplugCalendar" level="DEBUG" />
  <logger name="org.hatdex.dataplugCalendar.apiInterfaces.*" level="INFO" />
  <logger name="org.hatdex.dataplugCalendar.controllers.Api" level="INFO" />

  <!-- CORE PLUG LOGGERS -->
  <logger name="org.hatdex.dataplug.*" level="DEBUG" />
  <logger name="org.hatdex.dataplug.actors.PhataDataPlugVariantSyncer" level="DEBUG" />
  <logger name="org.hatdex.dataplug.services.*" level="INFO" />
  <logger name="org.hatdex.dataplug.controllers.*" level="DEBUG"/>
  <logger name="org.hatdex.dataplug.utils.JwtPhataAuthenticatedAction" level="DEBUG" />
  <logger name="org.hatdex.dataplug.utils.JwtPhataAwareAction" level="DEBUG" />

  <!-- LIBRARY LOGGERS -->
  <logger name="org.hatdex.dexter.actors.HatClientActor" level="INFO" />
  <logger name="org.hatdex.hat.api.services.HatClient" level="INFO" />

  <root level="WARN">
    <appender-ref ref="ASYNCSTDOUT" />
  </root>

</configuration>
