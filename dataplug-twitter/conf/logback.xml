<configuration>
  <conversionRule conversionWord="coloredLevel" converterClass="play.api.libs.logback.ColoredLevel" />

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <target>System.out</target>
    <encoder>
      <pattern>%highlight([%level]) [%date{MM/dd/YYYY HH:mm:ss}] %logger{1} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="ASYNCSTDOUT" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="STDOUT" />
  </appender>

  <logger name="ch.qos.logback" level="WARN" />
  <logger name="play" level="INFO" />
  <logger name="application" level="INFO" />
  <logger name="DatabaseNotableStore" level="INFO" />
  <logger name="org.hatdex.dataplug.utils.JwtPhataAuthenticatedAction" level="DEBUG" />
  <logger name="org.hatdex.dataplug.utils.JwtPhataAwareAction" level="DEBUG" />

  <logger name="org.hatdex.hat.api.services.HatClient" level="INFO" />
  <logger name="NetworkUpdateService" level="INFO"/>

  <logger name="org.hatdex.dataplugTwitter" level="INFO" />
  <logger name="org.hatdex.dataplug.*" level="DEBUG" />
  <logger name="org.hatdex.dataplug.actors.PhataDataPlugVariantSyncer" level="ERROR" />
  <logger name="org.hatdex.dataplugTwitter.controllers.Api" level="DEBUG" />

  <logger name="http" level="DEBUG" />
  <logger name="HatClientActor" level="DEBUG" />

  <root level="WARN">
    <appender-ref ref="ASYNCSTDOUT" />
  </root>

</configuration>
