<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%logger{15} - %message%n%xException{10}</pattern>
    </encoder>
  </appender>

  <appender name="ASYNCSTDOUT" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="STDOUT" />
  </appender>

  <logger name="ch.qos.logback" level="WARN" />
  <logger name="play" level="INFO" />
  <logger name="application" level="DEBUG" />
  <logger name="DatabaseNotableStore" level="INFO" />
  <logger name="BulletinService" level="INFO" />
  <logger name="JwtPhataAuthenticatedAction" level="INFO" />
  <logger name="JwtPhataAwareAction" level="INFO" />

  <logger name="org.hatdex.hat.api.services.HatClient" level="DEBUG" />
  <logger name="NetworkUpdateService" level="INFO"/>
  <logger name="FacebookPostService" level="DEBUG"/>
  <logger name="HatClientActor" level="DEBUG" />

  <logger name="MarketsquareNoticeService" level="DEBUG"/>
  <logger name="JwtPhataAuthentication" level="DEBUG"/>
  <logger name="HatLoginController" level="DEBUG"/>
  <logger name="GoogleCalendarInterface" level="DEBUG"/>



  <root level="WARN">
    <appender-ref ref="ASYNCSTDOUT" />
  </root>

</configuration>
