<configuration>
  <conversionRule conversionWord="coloredLevel" converterClass="play.api.libs.logback.ColoredLevel" />

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <target>System.out</target>
    <encoder>
      <pattern>[%level] [%date{YYYY-MM-dd HH:mm:ss}] %logger{1} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="ASYNCSTDOUT" class="ch.qos.logback.classic.AsyncAppender">
    <appender-ref ref="STDOUT" />
  </appender>

  <!-- GENERAL APP LOGGERS -->
  <logger name="ch.qos.logback" level="WARN" />
  <logger name="play" level="INFO" />
  <logger name="http" level="INFO" />
  <logger name="application" level="INFO" />

  <!-- PLUG-SPECIFIC LOGGERS -->
  <logger name="com.hubofallthings.dataplugYapily" level="DEBUG" />
  <logger name="com.hubofallthings.dataplugYapily.apiInterfaces.*" level="DEBUG" />
  <logger name="com.hubofallthings.dataplugYapily.apiInterfaces.authProviders.YapilyProvider" level="DEBUG" />
  <logger name="com.hubofallthings.dataplugYapily.controllers.YapilyApplication" level="DEBUG" />
  <logger name="com.hubofallthings.dataplugYapily.Module" level="DEBUG" />

  <!-- CORE PLUG LOGGERS -->
  <logger name="com.hubofallthings.dataplug.*" level="DEBUG" />
  <logger name="com.hubofallthings.dataplug.actors.PhataDataPlugVariantSyncer" level="ERROR" />
  <logger name="com.hubofallthings.dataplug.services.*" level="DEBUG" />
  <logger name="com.hubofallthings.dataplug.controllers.*" level="DEBUG"/>
  <logger name="com.hubofallthings.dataplug.controllers.Application" level="DEBUG"/>
  <logger name="com.hubofallthings.dataplug.controllers.SocialAuthController" level="DEBUG"/>
  <logger name="com.hubofallthings.dataplug.apiInterfaces.DataPlugEndpointInterface" level="DEBUG"/>
  <logger name="com.hubofallthings.dataplug.apiInterfaces.DataPlugApiEndpointClient" level="DEBUG"/>
  <logger name="com.hubofallthings.dataplug.utils.JwtPhataAuthenticatedAction" level="DEBUG" />
  <logger name="com.hubofallthings.dataplug.utils.JwtPhataAwareAction" level="DEBUG" />

  <!-- LIBRARY LOGGERS -->
  <logger name="org.hatdex.dexter.actors.HatClientActor" level="DEBUG" />
  <logger name="org.hatdex.hat.api.services.HatClient" level="DEBUG" />

  <root level="WARN">
    <appender-ref ref="ASYNCSTDOUT" />
  </root>

</configuration>
